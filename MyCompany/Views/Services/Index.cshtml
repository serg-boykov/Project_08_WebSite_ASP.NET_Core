@*As a model, a collection of services.*@
@model IQueryable<ServiceItem>
@{
    // Extract TextField from ViewBag.
    TextField textField = ViewBag.TextField;

    // Fill in all mega tags.
    ViewBag.Title = textField.MetaTitle;
    ViewBag.Description = textField.MetaDescription;
    ViewBag.Keywords = textField.MetaKeywords;
}

<div>
    @*If the model contains some data, in this case a list of services.*@
    @if (Model.Any())
    {
        @*Using the style from this template.*@
        <ul class="big-image-list">
            
            @foreach (ServiceItem entity in Model)
            {
                @*For each service we make a separate <li> element.*@
                <li>
                    
                    @*Link to a specific service.*@
                    <a asp-area="" asp-controller="Services" asp-action="Index" asp-route-id="@entity.Id">
                        
                        @*Clickable title image.*@
                        <img src="~/images/@entity.TitleImagePath" alt="" class="left" />
                    </a>
                    
                    @*Service name.*@
                    <h4>@entity.Title</h4>

                    @*A brief description of the service.*@
                    <p>@entity.Subtitle</p>
                </li>
            }
        </ul>
    }
</div>