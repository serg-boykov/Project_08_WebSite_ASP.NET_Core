@model ServiceItem
@{
    string strTitle = "Редактировать запись";
    ViewBag.Title = strTitle;
}

<script src="~/js/ckeditor/ckeditor.js"></script>

<div>
    <h2>@strTitle</h2>
    <div>

        @*Обычная html-форма, размеченного tagHelpers.
          Отправляемся на контроллер "ServiceItems" с действием "Edit", используя метод Post.
        *@
        <form asp-area="Admin" asp-controller="ServiceItems" asp-action="Edit" method="post" enctype="multipart/form-data">
            
            @*Скрытые вводные данные.*@
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="DateAdded" />
            <input type="hidden" asp-for="TitleImagePath" />

            <div asp-validation-summary="All"></div>

            <div class="div-box">
                <label asp-for="Title"></label>
                <input asp-for="Title" />
                <span asp-validation-for="Title"></span>
            </div>
            
            <div class="div-box">
                <label asp-for="Subtitle"></label>
                <input asp-for="Subtitle" />
                <span asp-validation-for="Subtitle"></span>
            </div>
            
            <div class="div-box">
                <label asp-for="Text"></label>
                <textarea asp-for="Text"></textarea>
                <span asp-validation-for="Text"></span>
            </div>
            
            <div class="div-box">
                <label asp-for="TitleImagePath"></label>

                @*name="titleImageFile" должен совпадать с именем на сервере.*@
                <input type="file" name="titleImageFile" id="titleImageFile" />
                
                <div>
                    @*При повторном обращении к этой записи пытаемся найти картинку и подгрузить.
                    Путь к картинке сохраняется в свойстве модели TitleImagePath.*@
                    <img class="img-block" src="~/images/@Model.TitleImagePath" />
                </div>
            </div>
            
            <div class="div-box">
                <label asp-for="MetaTitle"></label>
                <input asp-for="MetaTitle" />
                <span asp-validation-for="MetaTitle"></span>
            </div>
            
            <div class="div-box">
                <label asp-for="MetaDescription"></label>
                <input asp-for="MetaDescription" />
                <span asp-validation-for="MetaDescription"></span>
            </div>
            
            <div class="div-box">
                <label asp-for="MetaKeywords"></label>
                <input asp-for="MetaKeywords" />
                <span asp-validation-for="MetaKeywords"></span>
            </div>
            
            <input type="submit" value="Сохранить" />

        </form>
    </div>
</div>



<script>
    //При загрузке страницы ищем и заменяем текстовое поле для свойства Text
    window.onload = function() {
        
        var newCKEdit = CKEDITOR.replace('@Html.IdFor(x => x.Text)');
        newCKEdit.updateElement();
    }
</script>